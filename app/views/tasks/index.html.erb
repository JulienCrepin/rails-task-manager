<h1>  To Do </h1>
<p>+++++++++++++++++++++++++</p>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.details %></p>
<% end %>

<% @tasks.each do |t| %>
<ul>
  <li><%= link_to t.name, task_path(t) %>
</li>
  <li><%= link_to "edit", edit_task_path(t) %></li>
  <li><%= link_to "Delete", task_path(t),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
</ul>

<% end %>

 <%= link_to "new", new_task_path %>
